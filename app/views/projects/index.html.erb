<% if @projects.empty? %>

    <p>No projects found.</p>
<% else %>
<table>
    <thead>
    <tr>
        <th class="small-1">
            <%= t 'Image' %>
        </th>
        <th class="small-3">
            <%= Project.human_attribute_name(:name) %>
        </th>
        <th class="small-2">
            <%= t 'location' %>
        </th>
        <th class="small-2">
            <%= t 'authorized_amount' %>
        </th>
        <th class="small-2">
          <%= t 'executor' %>
        </th>
        <th class="small-2">
            <%= t 'status' %>
        </th>
        <th class="small-3">
            <%= t 'index_actions' %>
        </th>
    </tr>
    </thead>

    <tbody>
    <% @projects.each do |project| %>

    <tr>
        <td>
           <%= image_tag (project.image_url) %>
        </td>

        <td>
            <%= link_to project.name, project_path(project) %>
        </td>

        <td>
            <%= project.location %>
        </td>

        <td>
            <%= project.authorized_amount %>
        </td>

        <td>
            <%= project.executor %>
        </td>

        <td>
            <%= project.executor %>
        </td>

        <td>
            <% if policy(project).edit? %>
                <%= link_to t('.edit'), edit_project_path(project) %><br>
            <% end %>
            <% if policy(project).destroy? %>
                <%= link_to "Delete", project_path(project), {method: :delete, class: 'small', confirm: 'Are you sure?'} %>
            <% end %>
        </td>
    </tr>

    <% end %>
    </tbody>
</table>
<% end %>

<% if policy(Project).new? %>
    <%= link_to t(".new_project"), new_project_path, class: 'small radius button' %>
<% end %>
